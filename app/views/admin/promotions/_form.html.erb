<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<%= simple_form_for [:admin, @promotion], wrapper: :horizontal_form,
                    wrapper_mappings: { file: :horizontal_file } do |f| %>
  <%= f.error_notification %>
  <%= f.input :promo_type, collection: Promotion::TYPE_BE, include_blank: false %>
  <%= f.input :name %>
  <%= f.input :image, as: :file %>
  <div class="form-group row file optional input-note">
    <label class="col-sm-3 form-control-label file optional">&nbsp;</label>
    <div class="col-sm-9 input-note">please upload image with size 800px x 800px (width x height)</div>
  </div>
  <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
  <%= f.input :term_and_conditions, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
  <div class="form-group row mb-0">
    <div class="col-sm-9 offset-sm-3">
      <%= f.button :submit, class: "btn-primary" %>
      <%= link_to "Cancel", admin_promotions_path(:page => params[:page]), 
                  class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>

